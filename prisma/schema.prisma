generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chat_history {
  chat_id     String   @id @default(uuid())
  user_id     String
  user_message String
  retrieved_context String
  bot_response String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("chat_history")
}

model faq_manual {
  faq_id      String   @id @default(uuid())
  question    String
  answer      String
  kategori    String
  reference  String
  user_id     String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("faq_manual")
}

model User {
  user_id     String @id @default(uuid()) @db.Char(36)
  username    String
  email       String
  password    String
  role        String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  last_login  DateTime?
}

model LoginLog {
  log_id          String @id @default(uuid()) @db.Char(36)
  user_id         String @db.VarChar(36)
  login_time      DateTime @default(now())
  ip_address      String
  user_agent      String
  status          String
  failure_reason  String
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}

model Document {
  doc_id          String @id @default(uuid()) @db.Char(36)
  title           String
  type            String
  chunks          String @db.VarChar(100)
  embedding       String
  uploaded_by     String @db.Char(36)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
}